@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_EmptyLayout.cshtml";
}
@Scripts.Render("~/bundles/Home")
<div class="container">
    <h1>qrCode list</h1>
    <a href="#" class="btn btn-primary" data-bind="click:Home.viewModel.showmyqrcodelist">view my qrcode list</a>
    <table class=" table">
        <thead>
            <tr>
                <th>id</th>
                <th>title</th>
                <th>description</th>
                <th>start date</th>
                <th>expiry date</th>
                <th>qrcode</th>
            </tr>
        </thead>
        <tbody data-bind="foreach:viewModel.qrcodes">
            <tr>
                <td data-bind="text:id"></td>
                <td data-bind="text:title"></td>
                <td data-bind="text:description"></td>
                <td data-bind="text:start_date"></td>
                <td data-bind="text:expiry_date"></td>
                <td data-bind="kendoQRCode: {value: QrCodeUrl,size: 200}"></td>
            </tr>
        </tbody>
    </table>
    <div class="modal fade" id="myqrcodelist">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">详细</h4>
                </div>
                <div class="modal-body">
                    <span data-bind="kendoQRCode: {value: viewModel.myqrcodeurl,size: 200}"></span>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                </div>
            </div>
        </div>
    </div>   
</div>

